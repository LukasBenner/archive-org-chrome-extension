{
  "name": "archive.org extension",
  "description": "Save a website on archive.org",
  "version": "0.0.1",
  "manifest_version": 2,
  "browser_specific_settings": {
    "gecko": {
      "id": "lukasbenner@mailbox.org",
      "strict_min_version": "48.0"
    }
  },  
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "archive.org"
  },
  "permissions": [
    "tabs",
    "storage",
    "https://web.archive.org/save/*"
  ],
  "background": {
    "scripts": ["background-script.js"],
    "persistent": false
  }
}